\newcommand{\BackPage}{%
    \clearpage
    \ifodd\value{page}\hbox{}\newpage\fi
    \thispagestyle{nomark}
    \begin{center}
        \vspace*{\fill}
        \PubMark
    \end{center}
}

\renewcommand{\maketitle}{%
    \ifdefined\InfosecLevel
        \TitlePage{}
        \Colophon{}
        \InfosecCover{}
    \else
        \TitlePage{}
        \Colophon{}
    \fi
}

