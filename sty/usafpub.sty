%% Letterhead
\newcommand{\seal}[1]{%
    \def\@seal{#1}
}

\newcommand{\unitPatch}[1]{%
    \def\@unitPatch{#1}
}

\newcommand{\unit}[1]{%
    \def\@unit{#1}
}

