\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{ag7ifform}

\RequirePackage{hyperref}

\renewcommand{\LayoutTextField}[2]{#2}

\newcommand{\FormCheckBox}[2]{%
    \CheckBox[height=0.1in, width=0.15in, borderwidth=1pt, bordercolor={0 0 0}, backgroundcolor={}, name=#1]{#2}
}

\newcommand{\FormTextBoxL}[3][0.15in]{%
    \TextField[height=#1, width=#2, borderwidth=0, bordercolor={}, backgroundcolor={}]{#3}{}%
}

\newcommand{\FormTextBoxC}[3][0.15in]{%
    \TextField[align=1, height=#1, width=#2, borderwidth=0, bordercolor={}, backgroundcolor={}]{#3}{}%
}

\newcommand{\FormTextBoxR}[3][0.15in]{%
    \TextField[align=2, height=#1, width=#2, borderwidth=0, bordercolor={}, backgroundcolor={}]{#3}{}%
}

\newcommand{\FormTextBoxU}[3][0.15in]{%
    \TextField[height=#1, width=#2, bordercolor={0 0 0}, borderstyle=U]{#3}{}%
}

\newcommand{\FormTextBoxUR}[3][0.15in]{%
    \TextField[align=2, height=#1, width=#2, bordercolor={0 0 0}, borderstyle=U]{#3}{}%
}

\newcommand{\FormTextField}[3]{%
    \TextField[multiline, height=#1, width=#2, borderwidth=0, bordercolor={}, backgroundcolor={}]{#3}{}%
}

\newcommand{\FormDropDown}[3]{%
    \def\temp{#2}\ifx\empty
        \ChoiceMenu[print, combo, bordercolor={0 0 0}, name=#1]{}{#3}
    \else
        \ChoiceMenu[print, combo, bordercolor={0 0 0}, default=#2, name=#1]{}{#3}
    \fi
}

